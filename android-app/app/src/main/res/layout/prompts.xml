<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow">

    <LinearLayout
        android:layout_width="252dp"
        android:layout_height="172dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_black_border"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Your VehicleNo."
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/vehicleNoChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/vehicleNoChoosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_dots"
            android:drawablePadding="12dp"
            android:ems="10"
            android:padding="5dp"
            android:text="HELLLO"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="0.5"
                android:layout_marginRight="10dp"
                android:background="@color/transparent"
                android:text="OK"
                android:textColor="#830c6d"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="2"
                android:background="@color/transparent"
                android:text="CANCEL"
                android:textColor="#830c6d"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>